<!-- index.wxml -->
<view wx:if="{{ login }}" class="container">
  <todo-input class="todo-input" value="{{ createTodo }}" bind:confirm="onCreateTodo" bind:change="onCreateChange" bind:takephoto="takephoto" bind:takeaudio="takeAudio" />
  <view class="todo-list">
    <view class="list-title subtitle-color border-botton border-color">待完成</view>
    <!-- <todo-item class="border-botton border-color" bindsetHeight="setHeightByopenId" wx:for="{{ todoList }}" wx:if="{{ !item.isComplete }}" wx:key="{{ item.last_modify }}" users="{{ userList }}" value="{{ item }}" isActive="{{ active && active.id === item.id }}" bind:complete="onCompleteStateChange" bind:active="onActive" bind:change="onTodoChange" bind:delete="onDelete" /> -->
    <visualList  userList="{{userList}}" active="{{active}}" bindsetHeight="setHeightByopenId" bind:complete="onCompleteStateChange" bind:active="onActive" bind:change="onTodoChange" bind:delete="onDelete" data="{{unCompleteTodo}}"/>
  </view>
  <view class="todo-list">
    <view class="list-title subtitle-color border-botton border-color">已完成</view>
    <todo-item class="border-botton border-color" wx:for="{{ todoList }}" wx:if="{{ item.isComplete }}" wx:key="{{ index }}" users="{{ userList }}" value="{{ item }}" isActive="{{ active && active.id === item.id }}" bind:complete="onCompleteStateChange" bind:active="onActive" bind:change="onTodoChange" bind:delete="onDelete" />
  </view>
  <van-notify id="van-notify" />

  
</view>
